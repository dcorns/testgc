<% layout("layout.ejs") -%>	
<body>
<div class="row">
	<div class="col-lg-3 col-md-offset-4">

		<% if(message.length > 0) { %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%- message %>
			</div>
		<% } %>
			<h3>Game Camel sign in</h3>

			<br/ >
			<!--facebook's button is rendered below-->
			<a class="btn btn-block btn-social btn-facebook" href="/auth/facebook">
				<i class="fa fa-facebook"></i> Sign in with Facebook 
			</a>
			
			<!--google's button is rendered below-->
			<a class="btn btn-block btn-social btn-google" href="/auth/google">
				<i class="fa fa-google"></i> Sign in with Google 
			</a>

	</div>
</div>
</body>
