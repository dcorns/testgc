<% layout("layout.ejs") -%>

<div class="container">
    <div class="row" id="searchResults">
        <% for (var i = 0; i < games.length; i++) { %>
        <div class="col-md-4">
            <a href="/mygames/<%= games[i]._id %>">
                <div class="thumbnail">
                    <img src="<%= games[i].image %>">
                    <div class="caption">
                        <h3><%= games[i].name %></h3>
                        <p>$<%= games[i].postingData.quantity %></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>

    </div>
</div>